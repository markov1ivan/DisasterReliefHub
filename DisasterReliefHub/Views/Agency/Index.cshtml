@using DisasterReliefHub.Domain.Models
@model List<DisasterReliefHub.Domain.Models.Agency>
@{
    ViewBag.Title = "Index";
}

<h2>Agencies</h2>

<ul class="nav nav-tabs">
    <li class="active"><a href="#A" data-toggle="tab">Agencies</a></li>
</ul>
<div class="tabbable">
    <div class="tab-content">
        <div class="tab-pane active" id="A">
            <table>
                <thead>
                    <th>Name</th>
                    <th>Description</th>
                    <th></th>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (Agency agency in Model)
                        {
                            <tr>
                                <td>@agency.Name</td>
                                <td>@agency.Description</td>
                                <td><a href="@Url.Action("Edit", new {agencyId = agency.Id})">Edit</a></td>
                            </tr>
                        }
                    }
                </tbody>
                <tfoot></tfoot>
            </table>
            <br/>
            <input type="button" value="Add Agency"/>
        </div>
    </div>
</div>
