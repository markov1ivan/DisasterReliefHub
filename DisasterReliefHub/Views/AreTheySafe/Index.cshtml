@model DisasterReliefHub.Domain.Models.MissingPerson
@{
    ViewBag.Title = "Index";
}
<h2>Are They Safe?</h2>
    <p class="validateTips">All fields are required.</p>
    <h3>About Your Friend/Loved One</h3>
@using (Html.BeginForm())
{
    <fieldset>
        <label for="firstName">First Name</label>
        <input type="text" name="FirstName" id="LastName" class="text ui-widget-content ui-corner-all" />
        <label for="lastName">Last Name</label>
        <input type="text" name="LastName" id="LastName" class="text ui-widget-content ui-corner-all" />
        <label for="emailAddress">Email Address</label>
        <input type="text" name="Email" id="Email" value="" class="text ui-widget-content ui-corner-all" />
        
        <h4>How would you like to be notified if they are safe?</h4>
        Email: <input type="checkbox" name="notifyEmail" id="notifyEmail" class="text ui-widget-content ui-corner-all" />
        SMS: <input type="checkbox" name="notifySMS" id="notifySMS" class="text ui-widget-content ui-corner-all" onclick="if ($(this).is(':checked')) { $('#get_cell').show() } else { $('#get_cell').hide() }" />
        <span id="get_cell" style="display:none">Cell Phone #: <input type="text" name="lastName" id="lastName" class="text ui-widget-content ui-corner-all" /></span>

        <p style="text-align: center"><input type="submit" value=" Give" /></p>
    </fieldset>
}
